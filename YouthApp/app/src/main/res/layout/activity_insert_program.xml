<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_put_del_pembeli"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".InsertProgram">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/tvAddId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="ID :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddIdProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddNamaProgram"
            android:layout_alignBaseline="@+id/tvAddId"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddId"
            android:hint="Id" />


        <TextView
            android:id="@+id/tvAddNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddIdProgram"
            android:layout_marginRight="50dp"
            android:text="Nama :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddNamaProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddNama"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddNama"
            android:hint="Nama" />

        <TextView
            android:id="@+id/tvAddType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddNamaProgram"
            android:layout_marginRight="50dp"
            android:text="Type :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddTypeProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddNamaProgram"
            android:layout_alignBaseline="@+id/tvAddType"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddType"
            android:hint="Type" />

        <TextView
            android:id="@+id/tvAddKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddTypeProgram"
            android:layout_marginRight="50dp"
            android:text="Kategori :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddKategoriProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddNamaProgram"
            android:layout_alignBaseline="@+id/tvAddKategori"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddKategori"
            android:hint="Kategori" />

        <TextView
            android:id="@+id/tvAddTempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddKategoriProgram"
            android:layout_marginRight="50dp"
            android:text="Tempat :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddTempatProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddNamaProgram"
            android:layout_alignBaseline="@+id/tvAddTempat"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddTempat"
            android:hint="Tempat" />

        <TextView
            android:id="@+id/tvAddTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddTempatProgram"
            android:layout_marginRight="50dp"
            android:text="Tanggal :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddTanggalProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddNamaProgram"
            android:layout_alignBaseline="@+id/tvAddTanggal"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddTanggal"
            android:hint="Tanggal" />

        <TextView
            android:id="@+id/tvAddLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddTanggalProgram"
            android:layout_marginRight="50dp"
            android:text="Link :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddLinkProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddNamaProgram"
            android:layout_alignBaseline="@+id/tvAddLink"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddLink"
            android:hint="Link" />

        <TextView
            android:id="@+id/tvAddBiayaProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddLinkProgram"
            android:layout_marginRight="50dp"
            android:text="Biaya Daftar :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddBiayaProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddNamaProgram"
            android:layout_alignBaseline="@+id/tvAddBiayaProgram"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddBiayaProgram"
            android:hint="Biaya Daftar" />

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddBiayaProgram"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btAddData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert"/>

            <Button
                android:id="@+id/btAddBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAddMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/LinearLayout"
            android:hint="Pesan"
            android:inputType="textMultiLine"
            android:textSize="20dp"/>
    </RelativeLayout>
</ScrollView>