<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_put_del_pembeli"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".insert_user">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/tvAddId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="ID :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddIdUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddInstitusiUser"
            android:layout_alignBaseline="@+id/tvAddId"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddId"
            android:hint="Id" />


        <TextView
            android:id="@+id/tvAddNamaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddIdUser"
            android:layout_marginRight="50dp"
            android:text="Nama :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddNamaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddInstitusiUser"
            android:layout_alignBaseline="@+id/tvAddNamaUser"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddNama"
            android:hint="Nama" />

        <TextView
            android:id="@+id/tvAddInstitusiUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddNamaUser"
            android:layout_marginRight="50dp"
            android:text="Institusi :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddInstitusiUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddInstitusiUser"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddInstitusiUser"
            android:hint="Institusi" />

        <TextView
            android:id="@+id/tvAddTelpUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddInstitusiUser"
            android:layout_marginRight="50dp"
            android:text="Telepon :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddTelpUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddInstitusiUser"
            android:layout_alignBaseline="@+id/tvAddTelpUser"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddTelpUser"
            android:hint="Telp" />

        <TextView
            android:id="@+id/tvAddEmailUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddTelpUser"
            android:layout_marginRight="50dp"
            android:text="Email :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtAddEmailUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddInstitusiUser"
            android:layout_alignBaseline="@+id/tvAddEmailUser"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tvAddEmailUser"
            android:hint="Email" />

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddEmailUser"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btAddData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert"/>

            <Button
                android:id="@+id/btAddBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAddMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/LinearLayout"
            android:hint="Pesan"
            android:inputType="textMultiLine"
            android:textSize="20dp"/>
    </RelativeLayout>
</ScrollView>